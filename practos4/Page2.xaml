<Page x:Class="practos4.Page2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:practos4"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page2">

    <Grid>
        <DataGrid x:Name="dataGrid" AutoGenerateColumns="False" CanUserAddRows="True" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}"/>
                <DataGridTextColumn Header="Description" Binding="{Binding Description}"/>
                <DataGridTextColumn Header="FirstAnswer" Binding="{Binding FirstAnswer}"/>
                <DataGridTextColumn Header="SecondAnswer" Binding="{Binding SecondAnswer}"/>
                <DataGridTextColumn Header="ThirdAnswer" Binding="{Binding ThirdAnswer}"/>
                <DataGridTextColumn Header="RightAnswer" Binding="{Binding RightAnswer}"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
    
</Page>
